{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"**/dist/*",
			"**/docs/*",
			"**/doc/*",
			"**/*_pb.js",
			"**/*_pb.ts",
			"**/bundle/*",
			"**/package.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
